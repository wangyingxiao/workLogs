  color:#fff;
  border-radius: 5px;
  font-size:13px;
}
.btn-delete{
  margin-right:10px;
  background:#329d38;
}
/*模态框登录*/
.model-bg{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100vh;
  background:rgba(0, 0, 0, 0.5);
}
.model-input-containter{
  background: #fff;
  border:1px solid #ddd;
  position: fixed;
  z-index:10;
  width:70%;
  height:160px;
  top:20%;
  left:13%; 
  color:#000;
}
.model-input-containter .model-content{
  height:160px;
}
.model-input-containter .title{
  width:100%;
  height:60px;
  line-height:50px;
  text-align: center;
  color:#000;
   font-size:16px;
}
.model-input-containter .inputOuter{
  height:40px;
  padding:0px 10px 0px 10px;
}
.model-input-containter input.userId{
  /* height:20px; */
  line-height:20px;
  border:1px solid #aaa;
  padding:5px;  
}
.model-input-containter .buttonOuter{
  height:60px;
 display: flex;
 align-items:flex-end;
}
.model-input-containter .btns{
  width:50%;
  background: transparent;
  text-align: center;
  border: none;
  height:40px;
  line-height:40px;
  font-size:16px;
}
.model-input-containter .yes{
  color:#38b03f;
  border-top:1px solid #ddd;
  
}
.model-input-containter .no{
  border-top:1px solid #ddd;
  border-right:1px solid #ddd;
}

.show{
  display: block;
}
.hidden{
  display:none;
}
.stamp{
  border: 3px double #f00;
  font-size: 10px;  
    border-radius: 50%;
    color: #f00;
    width: 64px;
    height: 64px;
    position: absolute;
    bottom:60px;
    right:36px;
}
.stamp .label{
  display: inline-block;
    width: 100%;
    margin-top: 20px;
    font-weight: bold;
    font-size: 15px;
    text-align: center;
}