/* pages/main1.wxss */
.row{
  display: flex;
  justify-content:space-between;
  flex-wrap:wrap;
  padding:10px;
}
.col{
  width:100%;
  height:225px;
 border:1px solid #ddd;
 border-radius:5px;
 margin-top:10px;
 position: relative;
 padding:10px;
 margin-bottom:10px;
}
.imgouteruser{
  width:100%;
  text-align: center;
}
.imgouter{
  width:50%;
  height:10px;
  text-align:right;

}
.info{
  display: flex;
  justify-content:space-between;
  height:14px;
  line-height: 14px;
  color:#145ccd;
}
.user1{
  width:110px;
  height:110px;
  text-align: center;
  border-radius: 50%;
}
.name{
  font-size:16px;
}
.xing{
  width:20px;
  height:20px;
}
.text{
  width:90%;
  height:38px;
  font-size:14px;
  overflow: hidden;
  margin-top:10px;
  color:#808080;

}
.btn{
  position:absolute;
  bottom:8px;
  right:10px;
  width:120px;
  height:30px;
  line-height:30px;
  font-size:14px;
  color:#353535;
  background:#f2f2f2;
  border-color:#bfbfbf;
  margin-top:16px;
}
.chat{
  width:20px;
  height:20px;
  vertical-align: middle;
  margin-right:10px;
}
.btngreen{
   background:#38b03f;
   color:#fff;
}
.stamp{
  border: 3px double #f00;
  font-size: 10px;  
    border-radius: 50%;
    color: #f00;
    width: 64px;
    height: 64px;
    position: absolute;
    bottom:34px;
    left:16px;
}
.stamp .label{
  display: inline-block;
    width: 100%;
    margin-top: 20px;
    font-weight: bold;
    font-size: 15px;
    text-align: center;
}
.show{
  display: block;
}
.hidden{
  display:none;
}
