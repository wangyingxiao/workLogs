/* pages/edit/edit.wxss */
.topbox{
  display: flex;
  justify-content:space-around;
  font-size:14px;
  margin-top:5px;
}
.topbox .item{
  color:#000;
  padding:5px 10px;
}
.topbox .finish{
  /* background: #01CEAD; */
  color:#145ccd;
  border-bottom:1px solid #145ccd;
 
}
/*列表*/
.list{ 
  padding:4px;
  font-size:14px;
 
    max-height:58vh;
    overflow: scroll;
}
.show{
  display:block;
}
.list-item{
 display: flex;
 justify-content:space-between;
 padding:10px;
 border-bottom:1px solid #ddd;
}
.imgouter{
  width:15%;
 display: flex;
 flex-direction:column;
 align-items:center;
 justify-content:center;
}
.itemOuter{
  width:80%;
}
image{
  width:50px;
  height:50px;
  
}
.list-item image{
border-radius:50%;
}
.item-top{
  display: flex;
 justify-content:space-between;
 margin-bottom:10px;
}
.content{
  width:100%;
}

.time{
  width:60%;
  text-align: right;
  font-size:12px;
}
.delete{
  width:100%;
  text-align: right;
  color:#145ccd;
}
textarea{
  border:1px solid #ddd;
  margin-left:5%;
  margin-top:5%;
  margin-bottom:5%;
  width:85%;
  height:100px;
  padding:10px;
  font-size:14px;
}
.btn{
  width:120px;
  height:30px;
  line-height: 30px;
  background: #3280fc;
  color:#fff;
  font-size:14px;
}
.icon-save{
  width:18px;
  height:18px;
vertical-align: middle;
margin-right:10px;
}